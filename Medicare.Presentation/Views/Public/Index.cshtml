@{
    ViewData["Title"] = "Home Page";
}

<!-- component -->
<section class="flex flex-col md:flex-row h-screen items-center">

    <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
        <img src="~/images/doctors.jpg" alt="" class="w-full h-full object-cover">
    </div>
    <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">
        <div class="w-full h-100">
            <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12 text-teal-400">Inicia sesión en tu cuenta</h1>

            <form class="mt-6" action="#" method="POST">
                <div>
                    <label class="block text-gray-700">Usuario</label>
                    <input type="text" name="" id="" placeholder="Ingresa tu usuario, ej: pepito325" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-teal-300 focus:bg-white focus:outline-none" autofocus autocomplete required>
                </div>

                <div class="mt-4">
                    <label class="block text-gray-700">Contraseña</label>
                    <input type="password" name="" id="" placeholder="Ingresa tu contraseña" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-teal-300
                focus:bg-white focus:outline-none" required>
                </div>
                <button type="submit" class="w-full block bg-teal-400 hover:bg-teal-300 focus:bg-teal-300 text-white font-semibold rounded-lg
              px-4 py-3 mt-6">
                    Iniciar sesión
                </button>
            </form>
            <p class="mt-8">
                ¿Necesitas una cuenta? <a asp-controller="Public" asp-action="SignUp" class="text-teal-300 hover:text-teal-200 font-semibold">
                    Registrate
                </a>
            </p>
        </div>
    </div>
</section>
