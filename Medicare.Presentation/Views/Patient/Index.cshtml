@using Medicare.Application.Services.Interfaces
@using Medicare.Presentation.Models.Doctors
@using Medicare.Application.Models
@using Medicare.Application.Services.Interfaces
@using Medicare.Domain.Entities
@using Medicare.Presentation.Models.Patients
@using Medicare.Presentation.Models.Users
@model PatientsMenuViewModel
@inject ISessionService _sessionService;
@{
    ViewData["Title"] = "Medicare - Pacientes";
    Layout = "~/Views/Shared/AuthenticatedPartialView.cshtml";
    User currentUser = await _sessionService.GetCurrentUser();
    UserSessionInfo userSessionInfo = _sessionService.GetSession();
}

<style>

    .table {
        border-spacing: 0 15px;
    }

    i {
        font-size: 1rem !important;
    }

    .table tr {
        border-radius: 20px;
    }

    tr td:nth-child(n + 10),
    tr th:nth-child(n + 10) {
        border-radius: 0 0.625rem 0.625rem 0;
    }

    tr td:nth-child(1),
    tr th:nth-child(1) {
        border-radius: 0.625rem 0 0 0.625rem;
    }

    .animated {
        -webkit-animation-duration: 1s;
        animation-duration: 1s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
    }

        .animated.faster {
            -webkit-animation-duration: 500ms;
            animation-duration: 500ms;
        }

    .fadeIn {
        -webkit-animation-name: fadeIn;
        animation-name: fadeIn;
    }

    .fadeOut {
        -webkit-animation-name: fadeOut;
        animation-name: fadeOut;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }
</style>


<!-- component -->
<link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
      rel="stylesheet" />
<div class="flex flex-col items-center min-h-screen bg-white">
    <div class="w-full flex justify-center mb-10">
        <a asp-controller="Patient" asp-action="Create" class="inline-flex items-center gap-x-2 bg-teal-400 hover:bg-teal-300 text-white py-1 px-3 sm rounded">
            <i class="fa-solid fa-plus"></i>
            <p>Nuevo paciente</p>
            <i class="fa-solid fa-hospital-user"></i>
        </a>
    </div>
    <div class="col-span-12">
        <div class="overflow-auto lg:overflow-visible">
            <div class="flex lg:justify-between pb-1">
                <div>
                    <div class="flex w-full gap-x-2 items-center justify-around">
                        <form asp-controller="Patient" asp-action="Index" class="flex gap-x-2" method="post">
                            <button class="bg-teal-400 text-white py-1 px-3 sm rounded-full">
                                Resetear filtro
                                <i class="fa-solid fa-rotate-right"></i>
                            </button>
                        </form>
                        <form method="post" asp-controller="Patient" asp-action="Index" class="flex gap-x-2">
                            <input type="text"
                                   name="search"
                                   placeholder="Busqueda"
                                   class="w-full py-2 border-b-2 border-teal-300 outline-none focus:border-teal-300" />
                            <button class="bg-teal-400 text-white py-1 px-3 sm rounded-full">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </form>
                    </div>
                    <table class="table text-gray-400 border-separate space-y-6 text-sm">
                        <thead class="bg-teal-400 text-white">
                            <tr>
                                <th class="p-3 text-left"></th>
                                <th class="p-3">Nombre</th>
                                <th class="p-3 text-left">Apellido</th>
                                <th class="p-3 text-left">Direccion</th>
                                <th class="p-3 text-left">Celular</th>
                                <th class="p-3 text-left">Cedula</th>
                                <th class="p-3 text-left">Fecha de nacimiento</th>
                                <th class="p-3 text-left">Fumador</th>
                                <th class="p-3 text-left">Alergia</th>
                                <th class="p-3 text-left">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Patients.Count == 0)
                            {
                                <tr class="bg-teal-50 p-3"><td class="text-center" colspan="7">No hay pacientes registrados</td></tr>
                            }
                            else
                            {
                                @foreach (Patient patient in Model.Patients)
                                {
                                    var photo = string.IsNullOrEmpty(patient.Photo) ? "/images/user-default.png" : patient.Photo;
                                    <tr class="bg-teal-50">

                                        <td class="p-3"><img class="w-10 h-10 rounded-full" src="@photo" alt="Jese image"></td>
                                        <td class="p-3 font-medium capitalize">@patient.Name</td>
                                        <td class="p-3">@patient.Lastname</td>
                                        <td class="p-3">@patient.Address</td>
                                        <td class="p-3">@patient.PhoneNumber</td>
                                        <td class="p-3">@patient.IdentityCard</td>
                                        <td class="p-3">@patient.BirthDate</td>
                                        @if (patient.IsSmoker)
                                        {
                                            <td class="p-3">Sí</td>
                                        }
                                        else
                                        {
                                            <td class="p-3">No</td>
                                        }
                                        @if (patient.HasAllergy)
                                        {
                                            <td class="p-3">Sí</td>
                                        }
                                        else
                                        {
                                            <td class="p-3">No</td>
                                        }
                                        <td class="p-3">
                                            <a asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.Id" class="text-teal-400 hover:text-gray-100 mx-2">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <button onclick="openModal('@patient.Id')" class="text-red-400 hover:text-gray-100 ml-2">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <ul class="flex">
            @for (int i = 1; i <= Model.Pages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li>
                        <a class="mx-1 flex h-9 w-9 items-center justify-center rounded-full bg-gradient-to-tr from-teal-600 to-teal-300 p-0 text-sm text-white shadow-md shadow-teal-400/20 transition duration-150 ease-in-out">
                            @i
                        </a>
                    </li>
                }else{
                    <li>
                        <a class="mx-1 flex h-9 w-9 items-center justify-center rounded-full border border-blue-gray-100 bg-transparent p-0 text-sm text-blue-gray-500 transition duration-150 ease-in-out hover:bg-light-300"
                           asp-controller="Patient" asp-action="Index" asp-route-page="@i">
                            @i
                        </a>
                    </li>
                }
            }
        </ul>
    </nav>

    <!-- stylesheet -->
    <link rel="stylesheet"
          href="https://unpkg.com/@@material-tailwind/html@latest/styles/material-tailwind.css" />
    <!-- Material Icons Link -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet" />
    <script src="https://unpkg.com/@@material-tailwind/html@latest/scripts/ripple.js"></script>
</div>

<div class="main-modal fixed w-full h-100 inset-0 z-50 overflow-hidden flex justify-center items-center animated fadeIn faster"
     style="background: rgba(0,0,0,.7);">
    <div class="border border-red-500 shadow-lg modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
        <div class="modal-content py-4 text-left px-6">
            <!--Title-->
            <div class="flex justify-between items-center pb-3">
                <p class="text-2xl font-bold">Alerta</p>
                <div class="modal-close cursor-pointer z-50">
                    <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                         viewBox="0 0 18 18">
                        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z">
                        </path>
                    </svg>
                </div>
            </div>
            <!--Body-->
            <div class="my-5">
                <p>¿Esta seguro que desea eliminar este paciente?</p>
            </div>
            <!--Footer-->
            <div class="flex justify-end pt-2">
                <button class="focus:outline-none modal-close px-4 bg-gray-400 p-3 rounded-lg text-black hover:bg-gray-300">
                    Cancelar
                </button>
                <form asp-controller="Patient" asp-action="Delete">
                    <input type="hidden" id="patientIdToDelete" name="patientId" />
                    <button type="submit" class="focus:outline-none px-4 bg-red-500 p-3 ml-3 rounded-lg text-white hover:bg-red-400">Eliminar paciente</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    const modal = document.querySelector('.main-modal');
    const closeButton = document.querySelectorAll('.modal-close');

    const modalClose = () => {
        modal.classList.remove('fadeIn');
        modal.classList.add('fadeOut');
        setTimeout(() => {
            modal.style.display = 'none';
        }, 500);
    }

    const openModal = (userId) => {
        document.getElementById('patientIdToDelete').value = userId;
        modal.classList.remove('fadeOut');
        modal.classList.add('fadeIn');
        modal.style.display = 'flex';
    }

    for (let i = 0; i < closeButton.length; i++) {
        const elements = closeButton[i];
        elements.onclick = (e) => modalClose();
        modal.style.display = 'none';
        window.onclick = function (event) {
            if (event.target == modal) modalClose();
        }
    }
</script>
